{
  "name": "thecaverns",
  "private": true,
  "version": "0.1.0",
  "description": "Exploring Music Underground.",
  "author": {
    "name": "Steven Grimaldo",
    "email": "srgrimaldo@me.com",
    "url": "https://github.com/stevengrimaldo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stevengrimaldo/thecaverns.git"
  },
  "license": "GPL",
  "babel": {
    "presets": [
      [
        "babel-preset-env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "last 2 versions"
            ]
          }
        }
      ]
    ]
  },
  "eslintIgnore": [
    "src/js/vendors"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "PWD": true,
      "ENV": true,
      "envMode": true,
      "envUrls": true,
      "document": true,
      "window": true
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "settings": {
      "polyfills": [
        "flexbox"
      ]
    },
    "plugins": [
      "compat"
    ],
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "no-console": "off",
      "func-names": "off",
      "array-bracket-spacing": "off",
      "indent": [
        "error",
        2
      ],
      "compat/compat": "error",
      "comma-dangle": "off",
      "prefer-template": "off",
      "curly": "off",
      "consistent-return": "off",
      "no-return-assign": "off",
      "no-sequences": "off",
      "no-nested-ternary": "off",
      "no-param-reassign": "off",
      "max-len": [
        1,
        {
          "code": 200,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "browsers": [
            "> 1%",
            "last 2 versions",
            "not IE 10",
            "not ExplorerMobile 10",
            "not OperaMobile 12.1",
            "not OperaMini all",
            "not ExplorerMobile 11",
            "not BlackBerry 7"
          ],
          "severity": "warning"
        }
      ],
      "comment-empty-line-before": null,
      "rule-empty-line-before": null,
      "number-leading-zero": null,
      "block-closing-brace-newline-after": null,
      "at-rule-empty-line-before": null,
      "length-zero-no-unit": null,
      "selector-list-comma-newline-after": null,
      "selector-pseudo-element-colon-notation": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "/^lost-/"
          ]
        }
      ],
      "declaration-block-no-redundant-longhand-properties": null,
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "compression-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.2.1",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-compat": "^2.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-optipng": "^5.2.1",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^6.0.0",
    "imagemin-webpack-plugin": "^1.5.2",
    "lost": "^8.2.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-line-height-px-to-unitless": "^0.2.1",
    "postcss-loader": "^2.0.8",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.1",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "dependencies": {
    "common_": "^1.0.1",
    "gsap": "^1.20.3"
  },
  "scripts": {
    "build": "run-p webpack",
    "clean": "rimraf ./static/*",
    "deploy": "firebase deploy --only hosting",
    "dev": "run-p serve",
    "prebuild": "npm run clean",
    "predeploy": "npm run build",
    "predev": "npm run build",
    "serve": "npm run watch --progress --colors",
    "start": "npm run dev",
    "watch": "webpack --watch",
    "webpack": "webpack"
  }
}
